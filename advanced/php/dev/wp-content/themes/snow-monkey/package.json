{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-regular-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@inc2734/add-custom-event": "^0.5.0",
    "@inc2734/dispatch-custom-resize-event": "^0.4.0",
    "@inc2734/for-each-html-nodes": "^0.4.0",
    "@inc2734/smooth-scroll": "^1.0.7",
    "@inc2734/spider": "0.0.30",
    "@wordpress/browserslist-config": "^4.1.0",
    "@wordpress/env": "^4.1.3",
    "@wordpress/scripts": "^19.2.3",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "browserslist": "^4.19.1",
    "cpy-cli": "^3.1.1",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^5.0.15",
    "node-sass": "^7.0.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "postcss-mq-optimize": "^1.1.0",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "export:wp-content:plugins": "npm run cli 'cp -r wp-content/plugins .export/wp-content'",
    "export:wp-content:uploads": "npm run cli 'cp -r wp-content/uploads .export/wp-content'",
    "export:wp-content": "npm run cli 'rm -rf .export/wp-content' && mkdir -p .export/wp-content/uploads && run-p export:wp-content:*",
    "export:db": "mkdir -p .export/sql && npm run wp 'db export .export/sql/local.sql'",
    "export": "run-p export:*",
    "import:wp-content:plugins": "npm run cli 'cp -r .export/wp-content/plugins wp-content'",
    "import:wp-content:uploads": "npm run cli 'cp -r .export/wp-content/uploads wp-content'",
    "import:wp-content": "run-p import:wp-content:*",
    "import:db": "npm run wp 'db import .export/sql/local.sql'",
    "import": "run-p import:*",
    "wp-env": "wp-env",
    "start": "wp-env start && open http://localhost:8888",
    "stop": "npm run export && wp-env stop",
    "cli": "wp-env run cli",
    "wp": "wp-env run cli wp",
    "pretest": "wp-env start && wp-env run composer 'install --no-interaction'",
    "test:lint:php": "wp-env start && wp-env run composer run-script lint",
    "test:lint": "run-s test:lint:*",
    "test:unit:php": "wp-env start && wp-env run phpunit 'phpunit -c /var/www/html/wp-content/themes/snow-monkey/.phpunit.xml.dist --verbose'",
    "test:unit": "run-s test:unit:*",
    "test": "run-s test:*",
    "browsersync": "browser-sync start -p 'localhost:8888' -f '**/*' 'assets/**'",
    "cleanup:css": "rimraf assets/css && mkdir -p assets/css",
    "cleanup:js": "rimraf assets/js && mkdir -p assets/js",
    "cleanup:packages": "rimraf assets/packages && mkdir -p assets/packages",
    "cleanup:img": "rimraf assets/img && mkdir -p assets/img",
    "cleanup:translation": "rimraf .translation && mkdir -p .translation",
    "cleanup:load-files-target": "rimraf assets/load-files-target && mkdir -p assets/load-files-target",
    "cleanup:zip-directory": "rimraf snow-monkey",
    "cleanup:zip": "rimraf snow-monkey.zip",
    "cleanup:trial-zip-directory": "rimraf snow-monkey",
    "cleanup:trial-zip": "rimraf trial && mkdir trial",
    "css:app": "node-sass src/css/app -o assets/css/app && postcss assets/css/app/*.css -r",
    "css:block-editor": "node-sass src/css/block-editor -o assets/css/block-editor && postcss assets/css/block-editor/*.css -r",
    "css:classic-editor": "node-sass src/css/classic-editor -o assets/css/classic-editor && postcss assets/css/classic-editor/*.css -r",
    "css:block-library": "node-sass src/css/block-library -o assets/css/block-library && postcss assets/css/block-library/*.css -r",
    "css:admin": "node-sass src/css/admin -o assets/css/admin && postcss assets/css/admin/*.css -r",
    "css:wpac": "node-sass src/css/wpac -o assets/css/wpac && postcss assets/css/wpac/*.css -r",
    "css:custom-widgets": "node-sass src/css/custom-widgets -o assets/css/custom-widgets && postcss assets/css/custom-widgets/*.css -r",
    "css:dependency:amp": "node-sass src/css/dependency/amp -o assets/css/dependency/amp && postcss assets/css/dependency/amp/*.css -r",
    "css:dependency:contact-form-7": "node-sass src/css/dependency/contact-form-7 -o assets/css/dependency/contact-form-7 && postcss assets/css/dependency/contact-form-7/*.css -r",
    "css:dependency:elementor": "node-sass src/css/dependency/elementor -o assets/css/dependency/elementor && postcss assets/css/dependency/elementor/*.css -r",
    "css:dependency:woocommerce": "node-sass src/css/dependency/woocommerce -o assets/css/dependency/woocommerce && postcss assets/css/dependency/woocommerce/*.css -r",
    "css:dependency:snow-monkey-blocks": "node-sass src/css/dependency/snow-monkey-blocks -o assets/css/dependency/snow-monkey-blocks && postcss assets/css/dependency/snow-monkey-blocks/*.css -r",
    "css:dependency:snow-monkey-forms": "node-sass src/css/dependency/snow-monkey-forms -o assets/css/dependency/snow-monkey-forms && postcss assets/css/dependency/snow-monkey-forms/*.css -r",
    "css:dependency": "run-p css:dependency:*",
    "css:php": "cpy '**/*.php' '../../assets/css' --cwd=src/css --parents",
    "css": "npm run cleanup:css && run-p css:*",
    "js:app": "wp-scripts build src/js/app src/js/fix-adminbar src/js/drop-nav src/js/footer-sticky-nav src/js/global-nav src/js/sidebar-sticky-widget-area src/js/widgets src/js/page-top src/js/hash-nav src/js/smooth-scroll src/js/fontawesome src/js/customize-control src/js/customize-preview --output-path=assets/js",
    "js:dependency:elementor": "wp-scripts build src/js/dependency/elementor/preview --output-path=assets/js/dependency/elementor",
    "js:dependency:snow-monkey-blocks": "wp-scripts build src/js/dependency/snow-monkey-blocks/app --output-path=assets/js/dependency/snow-monkey-blocks",
    "js:dependency": "run-p js:dependency:*",
    "js": "npm run cleanup:js && run-p js:*",
    "packages:fontawesome": "cpy 'fontawesome-free/js/all.min.js' '../../assets/packages' --cwd=node_modules/@fortawesome --parents",
    "packages:spider": "cpy 'spider' '../../assets/packages' --cwd=node_modules/@inc2734 --parents",
    "packages": "npm run cleanup:packages && run-p packages:*",
    "img": "npm run cleanup:img && cpy '**' '../../assets/img' --cwd=src/img --parents",
    "pregenerate-load-files-target": "npm run cleanup:load-files-target && chmod 777 assets/load-files-target && wp-env start && npm run wp 'theme activate snow-monkey' && wp-env run composer 'install --no-interaction'",
    "postgenerate-load-files-target": "chmod 755 assets/load-files-target",
    "generate-load-files-target": "npm run cli 'php wp-content/themes/snow-monkey/bin/generate-load-files-target.php'",
    "translation:name": "wp-env start && npm run cli 'php wp-content/themes/snow-monkey/bin/template.php'",
    "translation": "npm run cleanup:translation && run-p translation:*",
    "build": "npm run packages && run-p js css img translation && npm run generate-load-files-target",
    "zip:pack": "npm run cleanup:zip-directory && rsync -a --exclude='.*' --exclude='*.log' --exclude='*.config.js' --exclude='/cache' --exclude='/bin' --exclude='/node_modules' --exclude='/vendor' --exclude='/tests' --exclude='/snow-monkey.zip' --exclude='/trial' ./ snow-monkey",
    "zip:archive": "zip -9 -qmr snow-monkey.zip snow-monkey",
    "zip": "npm run cleanup:zip && npm run zip:pack && wp-env start && wp-env run composer 'install --no-dev -d snow-monkey' && npm run zip:archive",
    "trial-zip:pack": "npm run zip:pack && rimraf snow-monkey/app/constructor/updater.php",
    "trial-zip:archive": "zip -9 -qmr trial/snow-monkey.zip snow-monkey",
    "trial-zip": "npm run cleanup:trial-zip && npm run trial-zip:pack && wp-env start && wp-env run composer 'install --no-dev -d snow-monkey' && wp-env run composer 'remove --update-no-dev -d snow-monkey inc2734/wp-github-theme-updater' && npm run trial-zip:archive"
  },
  "dependencies": {
    "smoothscroll-polyfill": "^0.4.4"
  }
}
